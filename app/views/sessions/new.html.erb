<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-md-offset-3 col-md-6 col-lg-offset-3 col-lg-6" >


        <h1>Sign In</h1>

        <%= form_tag sessions_path do %>
          <div>
            <%= label_tag :email %>
            <%= email_field_tag :email %>
          </div>
          <div>
            <%= label_tag :password %>
            <%= password_field_tag :password %>
          </div>

          <div class="button">
            <%= submit_tag 'Sign In' %>
          </div>

        <% end %>
    </div>
  </div>
</div>
