
<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-md-offset-1 col-md-10 col-lg-offset-1 col-lg-10 user-profile ">

      <h1>User Profile:</h1>



      <p><b>First Name:</b> <%= @user.first_name %> </p>
      <p><b>Last Name:</b> <%= @user.last_name %></p>
      <p><b>Email:</b> <%= @user.email %></p>


      <% if @user.is_admin == false %>
      <%= link_to 'Change Password' , edit_user_path(@user.id) %>
      <% end %>


<div class="admin-console">

  <% if @user.is_admin %>
      <p><b>Total of posts:</b> <%= @posts_count %></p>
      <p><b>Total of comments:</b> <%= @comments_count %></p>
      <p><b>Number fs users:</b> <%= @user_count %></p>

     <%= link_to 'Change Settings' , edit_user_path(@user.id) %>

     <hr>
     <h1> Admin Console:</h1>

     <table class="table table-striped">

          <tr>
            <th>Fisrt Name </th>
            <th>Last Name </th>
            <th> E-mail </th>
            <th> Is Admin? </th>
            <th> Settings</th>
            <th> Delete</th>


          </tr>

          <% @users.each do |user| %>

          <tr>
            <td><%= user.first_name %></td>
            <td> <%= user.last_name %></td>
            <td> <%= user.email %></td>
            <td> <%= user.is_admin %></td>

            <td>  <%= link_to 'Edit',
            edit_user_path(user.id) %> </td>

          <td>  <%= link_to 'Delete', user_path(user.id), method: :delete%> </td>
        </tr>
          <% end %>


        </table>

      </div>








<% end %>


</div>
</div>
</div>
