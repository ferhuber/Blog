<div class="container-fluid">
  <div class="row">
    <div class="edit-comment col-xs-12 col-md-offset-3 col-md-6 col-lg-offset-3 col-lg-6" >

      <h1>Edit Post</h1>
      <p><%= @post.errors.full_messages.join(', ') %></p>
      <%= form_for @post, url: post_path(@post)  do |f| %>
        <div>
          <%= f.label :title %>
          <%= f.text_area :title %>
        </div>
        <div>
          <%= f.label :post %>
          <%= f.text_area :post %>
        </div>
        <div class="button">
          <%= f.submit 'Update' %>
        </div>
      <% end %>

    </div>
  </div>
</div>
