<div class="container-fluid">
  <div class="row">
    <div class="edit-comment col-xs-12 col-md-offset-3 col-md-6 col-lg-offset-3 col-lg-6" >

      <h1>Edit Comment:</h1>



      <%= form_for @comment, url: comment_path(@comment)  do |f| %>

      <div>
        <% f.label :body %>
        <%= f.text_area :body %>
      </div>
    
      <div class="button">
        <%= f.submit 'Update' %>
      </div>
      <% end %>

    </div>
  </div>
</div>
